# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Backup OpenAI API key for automatic fallback when main key runs out of credits
BACKUP_OPENAI_API_KEY=your_backup_openai_api_key_here

# Optional: Gemini API key for alternative AI provider
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/telegram_bot.log

# Optional: Bot settings
MAX_FILE_SIZE_MB=20
MAX_MESSAGE_LENGTH=4000
